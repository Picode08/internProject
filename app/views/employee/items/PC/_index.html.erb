<table class="table table-bordered">
  <thead>
    <tr>
      <th class="bg-dark text-white font-weight-bold text-center">イメージ</th>
      <th class="bg-dark text-white font-weight-bold text-center">商品名</th>
      <th class="bg-dark text-white font-weight-bold text-center">カテゴリー</th>
      <th class="bg-dark text-white font-weight-bold text-center"></th>
    </tr>
  </thead>  
  <tbody>
   <% items.each do |item| %>
    <tr>
      <td></td>
      <td class="font-weight-bold text-center w-25"><%= item.name %></td>
      <td class="font-weight-bold text-center"><%= item.category %></td>
      <td class="text-center">
         <%= link_to '編集', "#", class: 'btn btn-primary mr-3' %>
         <%= link_to '加工法編集', "#", class: 'btn btn-primary mr-3' %>
         <%= link_to '削除', "#", class: 'btn btn-danger' %>
      </td>
    </tr>
   <% end %>
  </tbody>
</table>